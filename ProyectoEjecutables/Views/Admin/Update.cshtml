@{
    ViewData["Title"] = "Update";
}

@model App

<div class="jumbotron">
    <h1 class="display-4 text-center">
        Editar App
    </h1>
</div>


<div class="shadow p-3 bg-white rounded mx-auto" style="width: 23rem;">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre"
                   value="@Model.Nombre"
                   class="form-control" />
        </div>

        <div class="form-group">
            <label for="accesowindows">Acceso Windows</label>
            <input type="text" name="accesowindows" id="accesowindows"
                   value="@Model.AccesoWindows"
                   class="form-control" />
        </div>

        <div class="form-group">
            <label for="accesolinux">Acceso Linux</label>
            <input type="text" name="accesolinux" id="accesolinux"
                   value="@Model.AccesoLinux"
                   class="form-control" />
        </div>

        <div class="form-group">
            <label for="accesomac">Acceso Mac</label>
            <input type="text" name="accesomac" id="accesomac"
                   value="@Model.AccesoMac"
                   class="form-control" />
        </div>

        <div class="form-group">
            <label for="icono">Icono</label>
            <input type="file" name="imagen" id="imagen"
                   class="form-control-file" />
        </div>

        <button type="submit" class="btn btn-primary">
            Añadir
        </button>

        <a asp-action="Index"
           asp-controller="Admin"
           class="btn btn-danger">
            Cancelar
        </a>
    </form>
</div>